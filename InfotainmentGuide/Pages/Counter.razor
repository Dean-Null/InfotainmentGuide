@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click up</button>
<br />
<br />
<button class="btn btn-primary" @onclick="DecrementCount">Click down</button>
<br /> 
<br />
<button class="btn btn-primary" @onclick="ResetCount">Click for Zero</button>
<br />
<br />
<button class="btn btn-primary" @onclick="MaxCount">Click Max</button>
